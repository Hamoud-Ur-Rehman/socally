<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myprofile"
    android:background="@color/grey_white"
    >


    <LinearLayout
        android:id="@+id/other_prof"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/icon_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon"
            />



        <TextView
            android:id="@+id/my_chat_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/other_user1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="..."
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/pfp_stats"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/other_prof">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            android:clipToOutline="true"
            android:foreground="@drawable/story_circle">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/rehman_profile" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="161K"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="666"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/pfp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Rehman VS"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/pfp_stats"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        />



    <TextView
        android:background="@drawable/grey_box_p2"
        android:backgroundTint="@color/outline_box"
        android:id="@+id/pfp_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @ rehman.vs"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/pfp_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/pfp_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enthusiast"
        android:textSize="18dp"
        android:textColor="@color/blue_grey"
        app:layout_constraintTop_toBottomOf="@id/pfp_work"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/pfp_bio_extended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other_prof_string1"
        android:textSize="18dp"

        app:layout_constraintTop_toBottomOf="@id/pfp_bio"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/hairpin_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/hairpin_icon"
        app:layout_constraintTop_toBottomOf="@id/pfp_bio_extended"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/hairpin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reh.vs"
        android:textSize="18dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/pfp_bio_extended"
        app:layout_constraintStart_toEndOf="@id/hairpin_icon"
        android:layout_marginStart="4dp"
        />

    <FrameLayout
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/overlap_pfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hairpin_text"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search5_pfp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search2_pfp"
            android:layout_marginStart="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search4_pfp"
            android:layout_marginStart="60dp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/overlap_pfp"
        app:layout_constraintTop_toBottomOf="@id/hairpin_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/other_prof_string2"
        />




    <ImageView
        android:id="@+id/home_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/home_bar"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/home_bar"
        app:layout_constraintBottom_toBottomOf="@id/home_bar"
        />

    <LinearLayout
        android:id="@+id/highlight_row"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/overlap_pfp">

        <TextView
            android:id="@+id/add_highlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_circle"
            android:text="+"
            android:textSize="36sp"
            android:textColor="@color/dirty_red_pink"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="50dp"
            android:foreground="@drawable/outline_circle"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery5" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="50dp"
            android:foreground="@drawable/outline_circle"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="50dp"
            android:foreground="@drawable/outline_circle"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery3" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/highlight__name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/highlight_row">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nouvelle"
            android:textSize="18sp"
            android:textColor="@color/dirty_red_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mouton"
            android:textSize="18sp"
            android:textColor="@color/dirty_red_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Animaux"
            android:textSize="18sp"
            android:textColor="@color/dirty_red_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Voyage"
            android:textSize="18sp"
            android:textColor="@color/dirty_red_pink" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/mypost_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/highlight__name_row"
        >

        <ImageView

            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/mypost_my"
            android:layout_margin="8dp" />

        <ImageView
            app:tint="@color/blue_grey"
            android:layout_weight="1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/mypost_tagged_icon"
            android:layout_margin="8dp" />

    </LinearLayout>

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/mypost_grid"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:id="@+id/other_grid3x3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/mypost_grid"
        app:layout_constraintBottom_toTopOf="@id/home_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <GridLayout
            android:id="@+id/image_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="4dp"
            android:rowSpacing="4dp"
            android:columnSpacing="4dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic7" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic8"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/other_prof_pic9" />

        </GridLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>