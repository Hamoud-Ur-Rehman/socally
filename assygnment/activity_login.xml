<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/Socially_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/dark_red_pink"
        android:textSize="50dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="400sp"
        />

    <EditText
        android:id="@+id/username_field"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Username"
        android:textColor="@color/white"
        android:background="@drawable/grey_box_p2"
        android:paddingStart="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/Socially_p2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:background="@drawable/grey_box_p2"
        android:paddingStart="12dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/username_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/forgot_pw_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="@color/dirty_red_pink"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/password_field"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginRight="25sp"
        />


    <Button
        android:id="@+id/maroonButton_p2"
        android:layout_width="350dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/light_pink_white"
        android:text="Log in"

        android:textColor="@android:color/white"
        android:textSize="18sp"

        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/Socially_p2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"/>

    <TextView
        android:id="@+id/Socially_small_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/dark_red_pink"
        android:textSize="25dp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30sp"
        />

    <ImageView
        android:id="@+id/horiz_line_p2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:src="@drawable/horiz_line_p1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/rule_line_p2"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/grey_white"
        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"/>

    <View
        android:id="@+id/rule_right_p2"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:background="@color/grey_white"
        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <View
        android:id="@+id/rule_left_p2"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:background="@color/grey_white"
        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/dark_grey"
        android:textSize="25dp"
        android:textStyle="bold"


        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/dont_have_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:textColor="@color/dark_grey"
        android:textSize="25dp"

        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/signup_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up. "
        android:textColor="@color/dirty_red_pink"
        android:textSize="25dp"

        app:layout_constraintTop_toBottomOf="@id/maroonButton_p2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="100dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>