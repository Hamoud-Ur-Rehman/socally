<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_success">

    <TextView
        android:id="@+id/Socially_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/dark_red_pink"
        android:textSize="50dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="400sp"
        />

    <Button
        android:id="@+id/maroonButton_p3"
        android:layout_width="350dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/dark_red_pink"
        android:text="Log in"

        android:textColor="@android:color/white"
        android:textSize="18sp"

        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/Socially_p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"/>


    <TextView
        android:id="@+id/Socially_small_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch accounts"
        android:textColor="@color/dirty_red_pink"
        android:textSize="22sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/maroonButton_p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dont_have_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:textColor="@color/dark_grey"
        android:textSize="25dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/maroonButton_p3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="220dp"
        />

    <TextView
        android:id="@+id/signup_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up. "
        android:textColor="@color/dirty_red_pink"
        android:textSize="25dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/maroonButton_p3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="220dp"
        />

    <ImageView
        android:id="@+id/horiz_line_p3"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:src="@drawable/horiz_line_p1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/rule_line_p3"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="@color/grey_white"
        app:layout_constraintTop_toBottomOf="@id/maroonButton_p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:id="@+id/pfp_icon_p3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pfp_icon"


        app:layout_constraintTop_toBottomOf="@id/Socially_p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partially existing"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/pfp_icon_p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>