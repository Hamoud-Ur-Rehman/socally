<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".highlights_page"
    android:background="@color/black">

    <ImageView
        android:id="@+id/nature_highlight"
        android:layout_width="0dp"
        android:layout_height="650dp"
        android:src="@drawable/nature_pic"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/story_confirm_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/story_confirm_bar"
        app:layout_constraintTop_toBottomOf="@id/nature_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/story_confirm_bar_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/story_confirm_bar_up"
        app:layout_constraint_toBottomOf="@id/nature_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>













</androidx.constraintlayout.widget.ConstraintLayout>
