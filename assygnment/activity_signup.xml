<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@color/dark_red_pink">

    <TextView
        android:id="@+id/Socially_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"


        android:layout_marginTop="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/create_acc_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Create An Account and Sign Up "
        android:textColor="@color/white"
        android:textSize="25dp"

        app:layout_constraintTop_toBottomOf="@id/Socially_p4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/camera_icon_p4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/white_circle"
        android:src="@drawable/camera_icon"
        android:padding="12dp"

        app:layout_constraintTop_toBottomOf="@id/create_acc_p4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/username_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/camera_icon_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/usernameField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/username_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/yourname_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/usernameField_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/yournameField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/yourname_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/yourlast_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Last Name"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@+id/yournameField_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/yourlastField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Last Name"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/yourlast_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>


    <TextView
        android:id="@+id/dob_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/yourlastField_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
       />

    <EditText
        android:id="@+id/dobField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/dob_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/email_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/dobField_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
       />

    <EditText
        android:id="@+id/emailField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/email_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/password_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/emailField_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/passwordField_p4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="********"
        android:textColor="@color/placeholder_color"

        app:layout_constraintTop_toBottomOf="@id/password_p4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>



    <Button
        android:id="@+id/createAcc_p4"
        android:layout_width="350dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/dark_grey"
        android:text="Create an Account"

        android:textColor="@android:color/white"
        android:textSize="18sp"

        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/passwordField_p4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>