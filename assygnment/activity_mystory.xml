<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".highlights_page"
    android:background="@color/black">

    <ImageView
        android:id="@+id/nature_highlight"
        android:layout_width="0dp"
        android:layout_height="650dp"
        android:src="@drawable/nature_pic"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mystory_bar_down"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/mystory_bar_down"
        app:layout_constraintTop_toBottomOf="@id/nature_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/highlight_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@color/grey_white" />

    </LinearLayout>

    <TextView
        android:id="@+id/highlight_text_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/highlight_rules"
        app:layout_constraintStart_toEndOf="@id/pfp_icon_highlight"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/date_text_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11h"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/highlight_rules"
        app:layout_constraintStart_toEndOf="@id/highlight_text_highlight"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        />



    <ImageView
        android:id="@+id/pfp_icon_highlight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pfp_icon"


        app:layout_constraintTop_toBottomOf="@id/highlight_rules"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ–"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/highlight_rules"
        app:layout_constraintEnd_toEndOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
