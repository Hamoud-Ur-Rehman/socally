<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_user">

    <LinearLayout
        android:id="@+id/mychats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/icon_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon"
            />



        <TextView
            android:id="@+id/my_chat_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/username"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink"
            tools:ignore="HardcodedText" />




    </LinearLayout>




    <EditText
        android:id="@+id/search_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search..."
        android:textColor="@color/dark_grey"
        android:background="@drawable/grey_box_p2"
        android:paddingStart="40dp"
        android:inputType="text"

        app:layout_constraintTop_toBottomOf="@id/mychats"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/search_icon_ontop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/search_icon"

        app:layout_constraintStart_toStartOf="@id/search_field"
        app:layout_constraintTop_toTopOf="@id/search_field"
        app:layout_constraintBottom_toBottomOf="@id/search_field"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ•"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"

        app:layout_constraintEnd_toEndOf="@id/search_field"
        app:layout_constraintTop_toTopOf="@id/search_field"
        app:layout_constraintBottom_toBottomOf="@id/search_field"
        android:layout_marginEnd="8dp"/>






    <LinearLayout
        android:id="@+id/results_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@id/search_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Box 1 -->
        <LinearLayout
            android:id="@+id/result_box_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/search1_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/search1_pfp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_user2"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 11 "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user1" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". now"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />
        </LinearLayout>


        <!-- Box 2 -->
        <LinearLayout
            android:id="@+id/result_box_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/search2_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/search2_pfp"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jaun_elia"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="aaj ek baat to batao mujhe... "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user2"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". now"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />


        </LinearLayout>

        <!-- Box 3 -->
        <LinearLayout
            android:id="@+id/result_box_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:src="@drawable/other_pf"
                android:id="@+id/search3_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_user1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="sounds good xD "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user3"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". 2h"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />

        </LinearLayout>

        <!-- Box 4 -->
        <LinearLayout
            android:id="@+id/result_box_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/search4_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/search7_pfp"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parvin.shakir"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lovely! Sure!"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user4"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". 8h"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />
        </LinearLayout>




        <!-- Box 5 -->
        <LinearLayout
            android:id="@+id/result_box_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/search5_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/search5_pfp"
                />

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_user3"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="aoe ajo "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user5"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". 1h"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />

        </LinearLayout>

        <!-- Box 6 -->
        <LinearLayout
            android:id="@+id/result_box_6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/search6_pfp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/search6_pfp"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ali_ramesh"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="farooqi aage dekh "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/user6"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". 1d"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_red_pink" />
        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/camera_icon_below"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/camera_icon2"
        app:tint="@color/dark_red_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Camera"

        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/camera_icon_below"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18sp"
        android:layout_marginStart="5dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
