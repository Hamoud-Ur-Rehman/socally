<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notif_tab">


    <ImageView
        android:id="@+id/home_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/home_bar"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/home_bar"
        app:layout_constraintBottom_toBottomOf="@id/home_bar"
        />



    <LinearLayout
        android:id="@+id/notif_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Following"
            android:textColor="@color/dirty_red_pink"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/you_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="You"
            android:textColor="@color/dirty_red_pink"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dirty_red_pink"
        app:layout_constraintTop_toBottomOf="@id/notif_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/notif_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="210dp"

        />

    <TextView
        android:id="@+id/requests_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Follow Requests"
        android:textSize="17sp"
        android:textColor="@color/dirty_red_pink"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notif_section"
        android:layout_marginStart="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/requests_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <LinearLayout
        android:id="@+id/box_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="15"

        app:layout_constraintTop_toBottomOf="@id/requests_text"
        app:layout_constraintBottom_toTopOf="@id/home_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp6"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string1"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/my_photo2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Today"
            android:textSize="17sp"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp5"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string2"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/my_photo1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="This Week"
            android:textSize="17sp"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp2"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string3"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/my_photo1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp1"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string4"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/outline_box"
                android:gravity="center"

                android:text="Message"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp4"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string5"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/grey_box_p2"
                android:gravity="center"
                android:backgroundTint="@color/dark_red_pink"
                android:text="Follow"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notif_pfp3"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notif_string6"
                android:textSize="18sp"
                android:textColor="@color/black"

                />



            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/grey_box_p2"
                android:gravity="center"
                android:backgroundTint="@color/dark_red_pink"
                android:text="Follow"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"


                />

        </LinearLayout>

    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>