<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_post"
    >

    <LinearLayout
        android:id="@+id/mypost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />




        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Recents"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dark_red_pink" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />






    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypost_bar_down"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Library"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />




        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Photo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Video"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dirty_red_pink" />




    </LinearLayout>

    <ImageView
        android:id="@+id/mypost_bg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/mypost"
        android:src="@drawable/explore13"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:id="@+id/grid_4x4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/mypost_bg"
        app:layout_constraintBottom_toTopOf="@id/mypost_bar_down">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/gallery1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/gallery5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/gallery9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/gallery16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <ImageView
                android:src="@drawable/gallery15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"/>
            <ImageView
                android:src="@drawable/gallery14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:src="@drawable/gallery13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/infinity_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/infinity_icon"
        android:background="@drawable/white_circle"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/grid_4x4"
       android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/collage_icon"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        />

    <ImageView
        android:id="@+id/collage_icon"
        android:background="@drawable/white_circle"
       app:tint="@color/white"
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/collage_icon"
        app:layout_constraintBottom_toTopOf="@id/grid_4x4"
       android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/icon_text_multiple"

        android:layout_marginBottom="5dp"

        />

    <TextView
        android:id="@+id/icon_text_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_box"
        android:drawableLeft="@drawable/multiple_icon"
        android:backgroundTint="@color/black_grey"
    android:drawablePadding="8dp"
    android:padding="8dp"
    android:text="Select Multiple"
    android:textSize="16sp"
    android:textColor="@color/white"
        android:layout_marginBottom="5dp"
       android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/grid_4x4"
        app:layout_constraintEnd_toEndOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>