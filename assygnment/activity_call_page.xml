<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".call_page"
    android:background="@color/dirty_red_pink">


    <ImageView
        android:id="@+id/call_pfp_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/call_icon_pfp"

        android:background="@drawable/call_pfp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <TextView
        android:id="@+id/call_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Mother ❤"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/call_pfp_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 3:12 "
        android:textColor="@color/white"
        android:textSize="22sp"


        app:layout_constraintTop_toBottomOf="@id/call_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/call_hang_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/call_pfp"
        android:backgroundTint="@color/red"
        android:src="@drawable/call_end"
        android:padding="10dp"
        app:tint="@android:color/white"

        app:layout_constraintTop_toBottomOf="@id/call_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/call_loudspeaker"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:tint="@android:color/white"

        android:src="@drawable/loudspeaker"
        android:padding="11dp"

        app:layout_constraintTop_toBottomOf="@id/call_time"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/call_chat"
        android:layout_width="60dp"
        android:layout_height="60dp"


        android:src="@drawable/msg_call_icon"
        android:padding="5dp"

        app:layout_constraintTop_toBottomOf="@id/call_time"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>